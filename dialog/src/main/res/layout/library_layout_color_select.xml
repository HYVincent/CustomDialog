<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_background_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/library_select_color_show"
        android:padding="@dimen/size_10"
        android:scaleType="fitXY"
        android:src="@drawable/dialog_icon_color_select"
        android:background="@drawable/shape_background_white"
        android:layout_width="match_parent"
        android:layout_height="247dp" />

    <LinearLayout
        android:layout_marginTop="@dimen/size_12"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/size_30"
        android:paddingLeft="@dimen/size_30"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/text_size_14sp"
            android:text="当前选择颜色"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <TextView
            android:background="@color/color_blue_07aef5"
            android:id="@+id/library_select_color"
            android:layout_marginLeft="@dimen/size_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_15" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/size_25"
        android:layout_marginTop="@dimen/size_34"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/library_btn_cancel"
            android:textSize="@dimen/text_size_15sp"
            android:text="取消"
            android:gravity="center"
            android:textColor="#3c8fff"
            android:background="@drawable/shape_background_blue_line"
            android:layout_width="@dimen/size_94"
            android:layout_height="@dimen/size_39"/>

        <Button
            android:id="@+id/library_btn_ok"
            android:layout_marginLeft="84dp"
            android:textSize="@dimen/text_size_15sp"
            android:text="确定"
            android:gravity="center"
            android:textColor="@color/color_white_ffffff"
            android:background="@drawable/shape_background_blue"
            android:layout_width="@dimen/size_94"
            android:layout_height="@dimen/size_39" />
    </LinearLayout>

</LinearLayout>